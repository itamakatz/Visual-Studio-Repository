		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="5" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<Slider x:Name="slider1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" ValueChanged="slider1_ValueChanged" BorderThickness="0,0,15,0" MinWidth="100">
